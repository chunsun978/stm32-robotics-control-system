{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug STM32 (Simple)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "stlink",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/Debug/stm32-robotics-control.elf",
            "device": "STM32F411xE",
            "interface": "swd",
            "serialNumber": "",
            "runToEntryPoint": "main",
            "stlinkPath": "C:/ST/STM32CubeIDE_1.19.0/STM32CubeIDE/plugins/com.st.stm32cube.ide.mcu.externaltools.stlink-gdb-server.win32_2.2.200.202505060755/tools/bin/ST-LINK_gdbserver.exe",
            "v1": false,
            "showDevDebugOutput": "parsed",
            "serverArgs": [
                "--frequency", "4000"
            ]
        },
        {
            "name": "Debug STM32 (OpenOCD)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "C:/ProgramData/chocolatey/bin/openocd.exe",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/Debug/stm32-robotics-control.elf",
            "device": "STM32F411xE",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "preRestartCommands": [
                "monitor reset halt"
            ]
        },
        {
            "name": "Debug STM32 (External GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/stm32-robotics-control.elf",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "arm-none-eabi-gdb",
            "miDebuggerServerAddress": "localhost:3333",
            "setupCommands": [
                {
                    "text": "target extended-remote localhost:3333"
                },
                {
                    "text": "monitor reset halt"
                },
                {
                    "text": "load"
                },
                {
                    "text": "monitor reset halt"
                }
            ]
        }
    ]
}

